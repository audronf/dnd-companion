<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/kilamanjaro_brown"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/medium_spacing"
            android:paddingVertical="@dimen/short_spacing"
            android:translationZ="1dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/verticalGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:textSize="@dimen/regular_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/acrobatics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/animalHandling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/acrobatics"
                app:layout_constraintTop_toBottomOf="@id/acrobatics" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/arcana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/animalHandling"
                app:layout_constraintTop_toBottomOf="@id/animalHandling" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/athletics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/arcana"
                app:layout_constraintTop_toBottomOf="@id/arcana" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/deception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/athletics"
                app:layout_constraintTop_toBottomOf="@id/athletics" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/deception"
                app:layout_constraintTop_toBottomOf="@id/deception" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/insight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/history"
                app:layout_constraintTop_toBottomOf="@id/history" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/intimidation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/insight"
                app:layout_constraintTop_toBottomOf="@id/insight" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/investigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/intimidation"
                app:layout_constraintTop_toBottomOf="@id/intimidation" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/short_spacing"
                app:layout_constraintStart_toEndOf="@id/verticalGuideline"
                app:layout_constraintTop_toTopOf="@id/acrobatics" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/medicine"
                app:layout_constraintTop_toBottomOf="@id/medicine" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/perception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/nature"
                app:layout_constraintTop_toBottomOf="@id/nature" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/performance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/perception"
                app:layout_constraintTop_toBottomOf="@id/perception" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/persuasion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/performance"
                app:layout_constraintTop_toBottomOf="@id/performance" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/religion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/persuasion"
                app:layout_constraintTop_toBottomOf="@id/persuasion" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/sleightOfHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/religion"
                app:layout_constraintTop_toBottomOf="@id/religion" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/stealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/sleightOfHand"
                app:layout_constraintTop_toBottomOf="@id/sleightOfHand" />

            <com.audronf.dndcompanion.ui.customviews.ProficiencyEditText
                android:id="@+id/survival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/stealth"
                app:layout_constraintTop_toBottomOf="@id/stealth" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>